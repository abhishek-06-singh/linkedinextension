{
    "manifest_version": 3,
    "name": "LinkedIn Button Extension",
    "version": "1.0",
    "description": "Adds a button to the comment box",
    "permissions": ["activeTab"],
    "host_permissions": ["https://www.linkedin.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["button.js"]
      }
    ]
  }
  